<div id="page-wrapper" >
  <div id="page-inner">
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1 class="page-header"><%= t "course.title" %></h1>
          </div>
          <div class="panel-body">
            <%= link_to new_admin_course_path,
              class: "btn btn-success btn-xs pull-right btn-panel" do %>
              <i class="fa fa-plus-circle">
                <%= t ".add" %>
              </i>
            <% end %>
            <table class="table table-striped table-advance table-hover">
              <hr>
              <thead>
                <tr>
                  <th><%= t "course.title" %></th>
                  <th><%= t "course.description" %></th>
                  <th><%= t "course.start_date" %></th>
                  <th><%= t "course.end_date" %></th>
                  <th><%= t "course.supervisor_count" %></th>
                  <th><%= t "course.trainee_count" %></th>
                  <th><%= t "course.status" %></th>
                </tr>
              </thead>
              <tbody>
                <% @courses.each do |course| %>
                  <tr>
                    <td><%= course.title %></td>
                    <td><%= course.instruction.truncate 50 %></td>
                    <td><%= datetime course.start_date %></td>
                    <td><%= datetime course.end_date %></td>
                    <td><%= course.supervisor_courses.count %></td>
                    <td><%= course.user_courses.count %></td>
                    <td><%= course.status %></td>
                    <td>
                      <div class="admin-actions">
                        <%= link_to edit_admin_course_path(course),
                          class: "button btn btn-primary btn-xs" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_course_path(course), method: :delete,
                          data: {confirm: t("delete")},
                          class: "button btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
