<%= nested_form_for [:admin, @subject], html: {multipart: true,
  class: "form-horizontal style-form"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :instruction, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :instruction, class: "form-control" %>
    </div>
  </div>
  <%= t "subject.task_list" %>
  <%= f.fields_for :tasks do |builder| %>
    <%= render "task_fields", f: builder %>
  <% end %>
  <div class="added-field"></div>
  <%= f.link_to_add t("subject.add_task"), :tasks %>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-success pull-right" %>
    </div>
  </div>
<% end %>
