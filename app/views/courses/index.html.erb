<div id="page-wrapper" >
  <div id="page-inner">
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header"><%= t ".courses" %></h2>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-advance table-hover">
              <hr>
              <thead>
                <tr>
                  <th><%= t ".title" %></th>
                  <th><%= t ".instruction" %></th>
                  <th><%= t ".start_date" %></th>
                  <th><%= t ".end_date" %></th>
                  <th><%= t ".supervisor_count" %></th>
                  <th><%= t ".trainee_count" %></th>
                  <th><%= t ".course_status" %></th>
                  <th><%= t ".my_status" %></th>
                </tr>
              </thead>
              <tbody>
                <% @courses.each do |course| %>
                  <tr>
                    <td><%= course.title %></td>
                    <td><%= course.instruction.truncate 30 %></td>
                    <td><%= datetime course.start_date %></td>
                    <td><%= datetime course.end_date %></td>
                    <td><%= course.supervisor_courses.count %></td>
                    <td><%= course.user_courses.count %></td>
                    <td><%= course.status %></td>
                    <td>
                      <% if current_user.user_courses.map{|user_course|
                        user_course.course_id}.include? course.id %>
                        <b><%= t ".joined" %></b>
                      <% else %>
                        <b><%= t ".not_joined" %></b>
                      <% end %>
                    </td>
                    <td>
                      <div class="admin-actions">
                        <td>
                          <%= link_to t(".view") ,course_path(course), class: "btn btn-success" %>
                        </td>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
