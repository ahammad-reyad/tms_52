<table class="table table-striped table-advance table-hover">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".email" %></th>
    </tr>
  </thead>
  <tbody>
    <% @course.trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
